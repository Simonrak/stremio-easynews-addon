# API configuration
API_TIMEOUT=20000
API_USER_AGENT=curl/7.64.0

# Addon configuration
PORT=1337

# Domain for stream URLs (no protocol, used for video streaming)
# ADDON_DOMAIN=mydomain.com

# Proxy configuration (optional)
# Enable proxy mode to use default credentials and protect user access
# PROXY_ENABLED=true
# PROXY_URL=127.0.0.1
# PROXY_PORT=1085
# PROXY_TIMEOUT=20000
# PROXY_PASSWORD=your_secure_password_here

# Default credentials (used when proxy is enabled)
# DEFAULT_USERNAME=your_default_username
# DEFAULT_PASSWORD=your_default_password

# Stream proxy configuration (optional)
# Only used when proxy is enabled
# Time in milliseconds before stream tokens expire
# STREAM_TOKEN_EXPIRY=3600000  # 1 hour

# Middleware server port (required when proxy is enabled)
# Used for handling stream requests between proxy and addon
MIDDLEWARE_PORT=7337

# Timezone
TZ=UTC
